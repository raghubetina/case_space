<div class="row spacer">
  <div class="col-md-12">
    <%= link_to new_photo_path, :class => "btn btn-primary btn-block btn-lg" do %>
      <span class="glyphicon glyphicon-plus"></span>
    <% end %>
  </div>
</div>

<div class="row spacer">
  <% @photos.each do |photo| %>
    <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
      <div class="thumbnail">
        <%= link_to image_tag(photo.image.thumb), photo %>
        <div class="caption">
          <div class="section">
            <p>
              <%= photo.note %>
            </p>
          </div>
          <div class="section">
            <ul class="list-unstyled">
              <% photo.tags.each do |tag| %>
                <%= link_to tag.name, tag, :class => "badge badge-primary" %>
              <% end %>
            </ul>
          </div>
          <div>
            <%= link_to photo, :method => "delete", :data => {:confirm => "Are you sure you want to delete this photo?"}, :class => "btn btn-danger btn-sm btn-block"  do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
