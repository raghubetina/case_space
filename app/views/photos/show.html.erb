<div class="row">
  <div class="col-md-12 text-center">
    <div class="thumbnail">
      <%= image_tag @photo.image %>
      <div class="caption">
        <p class="lead"><%= @photo.note %></p>
        <ul class="list-unstyled tags">
          <% @photo.tags.each do |tag| %>
            <%= link_to tag.name, tag_path(tag), :class => "label label-default" %>
          <% end %>
        </ul>
        <div class="btn-group btn-group-justified">
          <%= link_to :back, :class => "btn btn-primary" do %>
            <span class="glyphicon glyphicon-chevron-left"></span>
          <% end %>
          <%= link_to edit_photo_path(@photo), :class => "btn btn-warning" do %>
            <span class="glyphicon glyphicon-edit"></span>
          <% end %>
          <%= link_to @photo, :method => "delete", :data => { :confirm => "Are you sure you want to delete this photo?" }, :class => "btn btn-danger" do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
